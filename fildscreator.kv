<MyBox>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    inputText:inputText
    finalText:finalText
    chk_prime:chk_prime
    chk_reports:chk_reports

    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            padding: 5, 0, 5, 0
            orientation: 'horizontal'
            ScrollView:
                id: scrlVInputField
                TextInput:
                    id: inputText
                    hint_text: "Введите Исходные данные типа:\nsnumber - character varying - № КТП\nscaption - character varying - КТП\nsFlow - character varying - Маршрут\n\n Также воспринимаются Мишины данные типа:\nMNF_Capacity.Get(rbt.id) as scapacity, --  [Код вида мощности]\n\n Также воспринимаются данные типа:\n smnemocode\n varchar \n Номер"
                    size_hint: 1, None
                    height: max( (len(self._lines)+1) * self.line_height, scrlVInputField.height)
            ScrollView:
                id: scrlFinalText
                TextInput:
                    id: finalText
                    hint_text: "Сюдой придет результат"
                    readonly: True
                    size_hint: 1, None
                    height: max( (len(self._lines)+1) * self.line_height, scrlVInputField.height)
        BoxLayout:
            size_hint: 1, 0.1
            BoxLayout:
                size_hint: 0.5, 1
                padding:50,5,50,5
                Button:
                    text: "Жмяк"
                    on_press: root.changeLabel()
            BoxLayout:
                size_hint: 0.5, 1
                padding:5, 0, 0 ,5
                size_hint: 0.5, 1
                orientation: 'vertical'
                BoxLayout:
                    CheckBox:
                        id: chk_prime
                        group: "checkbox"
                        # use selected Attribute to judge checkbox Status of
        #                state: 'down' if self.parent.selected else 'normal'
                        size_hint: None, None
                        size: lab.height, lab.height
                        active:True
                    Label:
                        id: lab
                        text: "Стандартный генератор"
                        color: 0, 0, 0, 1
                        size_hint: None, None
                        size: self.texture_size
                BoxLayout:
                    CheckBox:
                        id:chk_reports
                        group: "checkbox"
                        # use selected Attribute to judge checkbox Status of
        #                state: 'down' if self.parent.selected else 'normal'
                        size_hint: None, None
                        size: lab.height, lab.height

                    Label:
                        id: lab
                        text: "Генератор для отчетов"
                        color: 0, 0, 0, 1
                        size_hint: None, None
                        size: self.texture_size
